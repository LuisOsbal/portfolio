      .media-left
        %figure.image.is-48x48
          %img{:alt => "Placeholder image", :src => "https://bulma.io/images/placeholders/96x96.png"}/
      .media-content
        %p.title.is-4= t('name') + ": " + t('job')
        %p.subtitle.is-6 @LuisOsnet
    .content
      = t('description')
      = succeed "." do
        %a @LuisOsnet

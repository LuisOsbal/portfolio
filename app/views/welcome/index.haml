.card
  .card-image
    %figure.image.is-4by3
      -# %img{:alt => "Placeholder image", :src => "https://bulma.io/images/placeholders/1280x960.png"}/
      = image_tag "console.jpg", alt: "Luis Osnet", class: "coming_soon"
  .card-content
    .media
      .media-left
        %figure.image.is-48x48
          %img{:alt => "Placeholder image", :src => "https://bulma.io/images/placeholders/96x96.png"}/
      .media-content
        %p.title.is-4= t('name') + ": " + t('job')
        %p.subtitle.is-6 @LuisOsnet
    .content
      = t('description')
      = succeed "." do
        %a{:href => "http://twitter.com/luisosnet"} @LuisOsnet

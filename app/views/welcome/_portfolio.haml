.section#customize.bd-easy.section#portfolio
  .container
    %header.bd-index-header
      %h3.title.is-3= t("portfolio.title")
      %h4.subtitle.is-4= t("portfolio.description")

.cd-timeline.cd-container
  - @companies.each do |company|
    .cd-timeline-block
      .cd-timeline-img.cd-timeline-img
        %img{:alt => "Description", :src => "#{company.brand_logo_url}"}
      .cd-timeline-content
        .title.is-5= company.title
        %p= company.description
        %a.button.is-info.is-outlined.cd-read-more{:href => "companies/#{company.id}"} Read more
        %span.cd-date= company.start_date.strftime("%b %Y") + ' - ' + company.end_date.strftime("%b %Y")
